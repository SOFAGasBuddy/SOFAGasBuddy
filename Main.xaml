<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SOFAGasBuddy.Main">

    <ScrollView>
        <VerticalStackLayout
            Padding="20,0"
            Spacing="0">
            <Button
                x:Name="btnRefresh"
                Text="Refresh Data" 
                FontSize="18"
                SemanticProperties.Hint="Refreshed the data from the ESSO servers"
                Clicked="OnRefreshClicked"
                HorizontalOptions="End"
                Margin="10,10,10,30"
                MinimumHeightRequest="50"
                MinimumWidthRequest="150"/>
            <Label
                x:Name="lblData"
                Text="Account Balance:"
                FontSize="18"
                HorizontalOptions="Start"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Account Balance" />
            <Label
                x:Name="lblRefresh"
                Text="Last Refresh:"
                FontSize="18"
                HorizontalOptions="Start"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Last Refresh" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
