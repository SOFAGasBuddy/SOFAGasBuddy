<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SOFAGasBuddy.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SOFAGasBuddy"
    Shell.FlyoutBehavior="Flyout"
    Title="SOFAGasBuddy">

    <ShellContent
        Title="Main Page"
        ContentTemplate="{DataTemplate local:Main}"
        Route="Main" />

    <ShellContent
    Title="Settings"
    ContentTemplate="{DataTemplate local:Settings}"
    Route="Settings" />

    <ShellContent
   Title="Help"
   ContentTemplate="{DataTemplate local:Help}"
   Route="Help" />

    <ShellContent
    Title="About"
    ContentTemplate="{DataTemplate local:About}"
    Route="About" />
</Shell>
